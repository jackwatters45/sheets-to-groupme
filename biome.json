{
  "$schema": "https://biomejs.dev/schemas/1.9.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noBannedTypes": "warn",
        "noStaticOnlyClass": "warn"
      },
      "correctness": {
        "noConstAssign": "error",
        "noEmptyPattern": "error"
      },
      "style": {
        "noNonNullAssertion": "warn",
        "useShorthandArrayType": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "spaces",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "es5"
    }
  }
}
